<div class="search_form">
  <div class="form-frame">
    <%= search_form_for @q do |f| %>
    <div class="form-inline">
      <div class="form-group row">
        <%= f.label :restaurant_name_cont, '飲食店名', class: 'col-form-label' %>
        <div class="col-sm-10">
          <%= f.text_field :restaurant_name_cont %>
        </div>
      </div>
      <div class="form-group row">
        <%= f.label :food_genre_eq, '料理ジャンル', class:'col-form-label' %>
        <div class="col-sm-10">
          <%= f.select :food_genre_eq, options_for_select({ 焼鳥: 0, 焼肉・ホルモン: 1, 蕎麦・うどん: 2, お好み焼き・もんじゃ: 3, 鍋: 4, 丼もの: 5, パスタ・ピザ: 6, ハンバーガー: 7, カレー: 8, ラーメン: 9, 中華料理: 10,
  スペイン料理: 11, タイ料理: 12, 韓国料理: 13, 居酒屋: 14, ワインバー: 15, 和食その他: 16, 洋食その他: 17, カフェ・スイーツ: 18 }), include_blank: true %>
        </div>
      </div>
      <div class="form-group row">
        <%= f.label :orders_recommend_dish_cont, 'いつもオーダーする一品',  class:'col-form-label' %>
        <div class="col-sm-10">
          <%= f.text_field :orders_recommend_dish_cont %>
        </div>
      </div>
      <div class="form-group">
        <%= f.submit '検索', class:'btn search_btn btn-lg' %>
        <%= link_to '検索条件リセット', posts_path, class:'btn search_btn btn-sm' %>
      </div>
    <% end %>
    </div>
  </div>
</div>
