<h3 class="msg-title">メッセージ</h3>
<div class="ui segment">
<% @messages.each do |message| %>
  <% if message.body.present? %>
    <% if message.user == current_user %>
      <div class="item msg-right">
        <div class="content">
          <div class="header">
            <strong><%= message.user.name %></strong>
            <%= message.message_time %>
          </div>
          <div class="list">
            <div class="item">
              <i class="right triangle icon"></i>
              <%= message.body %>
              <% if message.user == current_user %>
                <%= message.read ? '既読' : '未読' %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    <% else %>
      <div class="item msg-left">
        <div class="content">
          <div class="header">
            <strong><%= message.user.name %></strong>
            <%= message.message_time %>
          </div>
          <div class="list">
            <div class="item">
              <i class="right triangle icon"></i>
              <%= message.body %>
              <% if message.user == current_user %>
                <%= message.read ? '既読' : '未読' %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
<% end %>
</div>
<%= form_with(model: [@conversation, @message]) do |f| %>
<div class="field msg-right">
  <%= f.text_area :body %>
</div>
  <%= f.text_field :user_id, value: current_user.id, type: 'hidden' %>
<div class = "msg-right">
  <%= f.submit('送信', class:'btn btn-primary') %>
</div>
<% end %>
<p class = "text-right"><%= link_to t('view.back'), follow_user_path(current_user.id), class: 'btn btn-outline-primary btn-white' %></p>
