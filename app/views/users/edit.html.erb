<h1>ユーザー情報の編集</h1>

<%= form_with(model: @user, local: true) do |f| %>
  <% if @user.errors.any? %>
    <ul>
      <% @user.errors.full_messages.each do |message| %>
       <li class="error_messages"><%= message %></li>
      <% end %>
    </ul>
  <% end %>

  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :email %>
  <%= f.email_field :email %>
  <%= f.label :profile %>
  <%= f.text_area :profile %>
  <%= f.label :profile_image %>
  <%= f.file_field :profile_image %>
  <%= f.hidden_field :profile_image_cache %>
  <%= f.submit "登録" %>
<% end %>

<%= link_to '詳細', user_path %>
