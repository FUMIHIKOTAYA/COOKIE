<div>
  <h2 class="text-center mt-5"><%= t('view.follows') %></h2>
  <div class="row">
    <div class="col-md-6">
      <h5 class="text-center mt-4"><%= t('view.follow') %></h5>
      <h3 class="text-center font-weight-bold py-3"><%= @user.name %><%= t('view.follow_users') %></h3>
        <% @following_users.each do |follow_user| %>
          <div class="col-md-6">
            <% if follow_user.profile_image? %>
              <%= image_tag "#{follow_user.profile_image}", :size =>'50x50',class:"rounded-circle" %>
            <% else %>
              <%= image_tag 'default.png', :size =>'50x50',class:"rounded-circle" %>
            <% end %>
            <p><%= follow_user.name %></p>
            <%= link_to 'メッセージ', conversations_path(sender_id: current_user.id, recipient_id: follow_user.id), method: :post, class: 'btn btn-primary' %>
          <div class="follow-btn"><%= render 'follow_form', user: follow_user %></div>
        </div>
        <% end %>
    </div>
    <div class="col-md-6">
      <h5 class="text-center mt-4"><%= t('view.follower') %></h5>
      <h3 class="text-center font-weight-bold py-3"><%= @user.name %><%= t('view.follower_users') %></h3>
        <% @followers_users.each do |follower_user| %>
          <div class="col-md-6">
            <% if follower_user.profile_image? %>
              <%= image_tag "#{follower_user.profile_image}", :size =>'50x50',class:"rounded-circle" %>
            <% else %>
              <%= image_tag 'default.png', :size =>'50x50',class:"rounded-circle" %>
            <% end %>
            <p><%= follower_user.name %></p>
            <%= link_to 'メッセージ', conversations_path(sender_id: current_user.id, recipient_id: follower_user.id), method: :post, class: 'btn btn-primary' %>
          </div>
        <% end %>
    </div>
  </div>
  <button class="btn btn-outline-primary btn-white ml-3 mt-4"><%= link_to t('view.back'), user_path(current_user.id) %></button>
</div>
