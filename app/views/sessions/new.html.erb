<div id="wrapper">
  <body id="signup_page">
    <div class="login_form pt-0">
      <h2 class="signup_title"><%= t('view.login') %></h2>

      <%= form_with(scope: :session, url: sessions_path, local: true) do |f| %>

        <div class="form-group">
          <%= f.email_field :email, placeholder: t('view.email'), class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.password_field :password, placeholder: t('view.password'), class: 'form-control' %>
        </div>

        <%= f.submit t('view.login'), class: 'btn login_btn btn-lg' %>
      <% end %>

    </div>
  </body>
</div>
